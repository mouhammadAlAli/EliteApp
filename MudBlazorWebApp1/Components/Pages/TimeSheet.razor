@page "/TimeSheet"
@attribute [Authorize]

<PageTitle>Time Sheet</PageTitle>
<MudGrid Justify="Justify.FlexStart">
    <MudItem>
        <MudIcon Size="Size.Large" Color="Color.Primary" Icon="@Icons.Material.Outlined.AccessAlarm" Class="mt-4 ml-4" />
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.h4" Color="Color.Primary" Class="mt-4 mr-4">Timesheet</MudText>
    </MudItem>
</MudGrid>
<MudContainer Class="px-8" MaxWidth="MaxWidth.False">
    <MudGrid Justify="Justify.FlexStart">
        <MudItem sm="6">
            <MudGrid>
                <MudItem xs="12">
                </MudItem>
                <MudItem xs="12">
                    <MudCard Square="true" Outlined="true">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudGrid Justify="Justify.FlexStart">
                                    <MudItem>
                                        <MudIcon Color="Color.Primary" Icon="@Icons.Material.Outlined.CalendarMonth" />
                                    </MudItem>
                                    <MudItem>
                                        <MudText Color="Color.Primary">@Title</MudText>
                                    </MudItem>
                                </MudGrid>
                                <MudDivider Style="width: 100%;" />
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent></MudCardContent>
                    </MudCard>
                </MudItem>
                <MudItem xs="12">
                    <MyStuff />
                </MudItem>
            </MudGrid>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                1
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                2
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                3
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private DateTime StartOfWeek = DateTime.Today.AddDays(-(int)DateTime.Today.DayOfWeek);
    private DateTime EndOfWeek = DateTime.Today.AddDays(-(int)DateTime.Today.DayOfWeek).AddDays(7).AddSeconds(-1);
    private string Title => StartOfWeek.Month == EndOfWeek.Month ? $"{StartOfWeek.Day} - {EndOfWeek.Day} {StartOfWeek.ToString("MMM")}" : $"{StartOfWeek.Day} {StartOfWeek.ToString("MMM")} - {EndOfWeek.Day} {EndOfWeek.ToString("MMM")}";
    protected override async Task OnInitializedAsync()
    {

    }
}
