<MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
    <MudItem>
        <MudImage Src=@Image
        Elevation="25"
        Class="rounded-lg square-image"
        FallbackSrc="Images/profile.jpeg" />
    </MudItem>
    <MudItem>
        <MudText Align="Align.Center" Typo="Typo.body1">@($"{Name} ") </MudText>
        <MudText Align="Align.Center" Color="Color.Primary" Typo="Typo.body1">@($"{SuffixNameTeamLead} {SuffixNameForMe}") </MudText>
    </MudItem>
</MudStack>
<style>
    .square-image {
    width: 75px;
    height: 75px;
    object-fit: cover;
    }
</style>
@code {
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Image { get; set; }
    [Parameter]
    public bool IsTeamLeader { get; set; }
    [Parameter]
    public bool ForMe { get; set; }
    private string SuffixNameTeamLead => IsTeamLeader ? "(Team Leader)" : "";
    private string SuffixNameForMe => ForMe ? "(Me)" : "";
}
